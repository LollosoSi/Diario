<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="utenti.diario.activities.administration.AdminAreaMain">

    <LinearLayout
        android:id="@+id/options_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container_user_management"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_user_management"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_shape"
                android:tint="@color/admin_tint"
                app:srcCompat="@drawable/ic_users" />

            <TextView
                android:id="@+id/textview_user_management"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_management" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_institutes_management"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_institutes_management"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_shape"
                android:tint="@color/admin_tint"
                app:srcCompat="@drawable/ic_houses" />

            <TextView
                android:id="@+id/textview_institutes_management"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/institutes_management" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
